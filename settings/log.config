[formatters]
keys: detailed,simple
 
[handlers]
keys: console,scipionGeneral
 
[loggers]
keys: root, general
 
[formatter_simple]
format: %(name)s:%(levelname)s:  %(message)s
 
[formatter_detailed]
format: %(asctime)s %(levelname)s %(name)s (%(lineno)d):  %(message)s

[handler_console]
class=StreamHandler
level=INFO
formatter=detailed
args=(sys.stdout,)
 
[handler_scipionGeneral]
class=logging.handlers.RotatingFileHandler
level=INFO
formatter=detailed
args=("~/logs/scipionLog.log",'a',10000)
 
[logger_root]
handlers: console

[logger_general]
level: INFO
qualname: pyworkflow
handlers: scipionGeneral
